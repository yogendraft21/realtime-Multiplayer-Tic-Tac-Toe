<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tic Tac Toe</title>
    <link rel="stylesheet" href="style.css" />
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script src="http://code.jquery.com/jquery-2.1.4.min.js"></script>
    <script>
      const ROOM_ID = "<%= roomId %>";
    </script>
  </head>
  <body>
    <div class="header">
      <div class="username">
        <p id="player-name">Playername:</p>
      </div>
      <div class="logo">
       <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTkAJfsGel_J9U3YNerEpqKXA2sC5DM5Fk5yA&usqp=CAU" alt="">
      </div>
      <div class="menu">
        <div class="items">
          <a href="#">About</a>
          <a href="#">Logout</a>
          <div class="profile">
            <img src="https://i.imgur.com/R2ihrRs.jpeg" alt="">
          </div>
        </div>
          <!-- <h3>Tic Tac Toe</h2> -->
      </div>
    </div>  
    <div class="main">  
    <div class="main__left">
      <div class="videos__group">
        <div id="video-grid">

        </div>
      </div>
      <div class="options">
        <div class="options__left">
          <div id="stopVideo" class="options__button">
            <i class="fa fa-video-camera"></i>
          </div>
         
          <!-- <div id="showChat" class="options__button">
            <i class="fa fa-comment"></i>
          </div> -->
        </div>
        <div class="options__right">
          <!-- <div id="inviteButton" class="options__button">
            <i class="fas fa-user-plus"></i>
          </div> -->
          <div id="muteButton" class="options__button">
            <i class="fa fa-microphone"></i>
          </div>
        </div>
      </div>
    </div>
    <div class="main__center">
      <div class="board">
        <p>Your Symbol: <div id="symbol">waiting...</div></p>
        <button class="cell" id="a0"></button>
        <button class="cell" id="a1"></button>
        <button class="cell" id="a2"></button>
        <button class="cell" id="b0"></button>
        <button class="cell" id="b1"></button>
        <button class="cell" id="b2"></button>
        <button class="cell" id="c0"></button>
        <button class="cell" id="c1"></button>
        <button class="cell" id="c2"></button>

        <div id="messages">Waiting for opponent to join...</div>


      </div>
      <button id="find_opp">Invite Opponent</button>
    </div>
    <div class="main__right">
      <div class="main__chat_window">
          <div class="messages">

          </div>
      </div>
      <div class="main__message_container">
        <input id="chat_message" type="text" autocomplete="off" placeholder="Type message here...">
        <div id="send" class="options__button">
          <i class="fa fa-send-o" aria-hidden="true"></i>
        </div>
      </div>
    </div>
  </div>
  </body>
  <script src="http://code.jquery.com/jquery-2.1.4.min.js"></script>
  <script src="script.js"></script>
</html>

